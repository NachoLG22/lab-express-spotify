<div class="row row-cols-1 row-cols-md-2 g-2">
  {{#each artists as |artist|}}
    <div class="col">
      <div class="card h-400 w-300">
        <img
          src="{{artist.images.0.url}}"
          class="card-img-top"
          alt="artist-image"
          style="width:80%; heigh: 350px;"
        />
        <div class="card-body text-center bg-light">
          <h5 class="card-title">{{artist.name}}</h5>
          <a class="btn btn-danger" href="/albums/{{artist.id}}">View Albums</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>